{
  "manifest_version": 3,
  "name": "Supprimer la balise ytd-browse",
  "version": "1.0",
  "description": "Une extension pour supprimer la balise ytd-browse sur YouTube.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
